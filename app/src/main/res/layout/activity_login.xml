<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Login.ui.LoginActivity"
    android:orientation="vertical">
    <EditText
        android:layout_gravity="center"
        android:id="@+id/login_edtinputtel"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edt_inputtel"
        android:hint="@string/tel"
        android:inputType="number"
        android:paddingStart="30dp"
        tools:ignore="RtlSymmetry" />
<RelativeLayout
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">
    <EditText
        android:layout_gravity="center"
        android:id="@+id/edt_inputnumber"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/edt_inputtel"
        android:hint="@string/verificationCode"
        android:inputType="number"
        android:paddingStart="30dp"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/login_edtbutton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/editbutton"
        android:text="@string/obtain"
        android:textColor="@color/colorRed" />
</RelativeLayout>
    
    <Button
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/redbuttom"
        android:layout_gravity="center"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:id="@+id/login_btnlogin"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetPass"
            android:layout_weight="1"
            android:textColor="@color/colorRed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tourist"
            android:gravity="right"
            android:textColor="@color/colorRed"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <include layout="@layout/login_bottom"/>

</LinearLayout>
