<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/headbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:scaleType="fitXY"
            android:src="@mipmap/site"
            android:id="@+id/bookReview_bookImg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/bookReview_bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三体（全三册）"
                android:textColor="@color/classicBookName"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘慈欣"
                android:layout_marginTop="8dp"
                android:textColor="@color/classicText"
                android:textSize="12sp"
                android:id="@+id/bookReview_Author"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dasdasdasdas"
        android:layout_marginTop="18dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/bookReview_number"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:id="@+id/bookReview_Recycle">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>