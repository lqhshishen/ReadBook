<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张建祥"
            android:textColor="@color/classicText"
            android:textSize="12sp"
            android:id="@+id/bookDetail_item_userId"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/9/16"
            android:layout_marginLeft="10dp"
            android:textColor="@color/classicText"
            android:textSize="12sp"
            android:id="@+id/bookDetail_item_time"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdsaddasdasdasdafdsggsdsfs"
        android:textSize="14sp"
        android:id="@+id/bookDetail_item_comment"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="8dp"/>
</LinearLayout>