<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liqihao.readbook.module.Classification.ui.ClassificationActivity"
    android:orientation="vertical">

    <include layout="@layout/headbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scienceFiction"
            android:layout_marginStart="20dp"
            android:id="@+id/classic_headitem1"
            android:textColor="@color/classicText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/martialArts"
            android:layout_marginStart="24dp"
            android:id="@+id/classic_headitem2"
            android:textColor="@color/classicText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cityBook"
            android:layout_marginStart="24dp"
            android:id="@+id/classic_headitem3"
            android:textColor="@color/classicText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/romance"
            android:layout_marginStart="24dp"
            android:id="@+id/classic_headitem4"
            android:textColor="@color/classicText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/throughBook"
            android:layout_marginStart="24dp"
            android:id="@+id/classic_headitem5"
            android:textColor="@color/classicText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onlineGame"
            android:layout_marginStart="24dp"
            android:id="@+id/classic_headitem6"
            android:textColor="@color/classicText"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/filer_sel"
            android:layout_marginStart="20dp"
            android:id="@+id/classic_headitem7" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="12dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/classify_recycle">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
