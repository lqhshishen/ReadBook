<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="128dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/site"
                    android:id="@+id/bookshelf_item1_img"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手绘的门道"
                android:textColor="@color/classicBookName"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:id="@+id/bookshelf_item1_bookname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已读12%"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                tools:ignore="SmallSp"
                android:id="@+id/bookshelf_item1_jindu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/site"
                    android:id="@+id/bookshelf_item2_img"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手绘的门道"
                android:textColor="@color/classicBookName"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:id="@+id/bookshelf_item2_bookname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已读12%"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                tools:ignore="SmallSp"
                android:id="@+id/bookshelf_item2_jindu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/site"
                    android:id="@+id/bookshelf_item3_img"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手绘的门道"
                android:textColor="@color/classicBookName"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:id="@+id/bookshelf_item3_bookname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已读12%"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                tools:ignore="SmallSp"
                android:id="@+id/bookshelf_item3_jindu"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>