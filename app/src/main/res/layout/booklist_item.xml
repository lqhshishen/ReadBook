<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/booklist_item">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@mipmap/profile_bookshelf"
            android:id="@+id/booklist_item_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手绘的门道"
            android:textSize="12sp"
            android:textColor="@color/classicBookName"
            android:id="@+id/booklist_item_bookname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已读12%"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="@color/classicText"
            tools:ignore="SmallSp"
            android:id="@+id/booklist_item_jindu"/>


    </LinearLayout>



</LinearLayout>