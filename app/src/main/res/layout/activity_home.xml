<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/home_draw">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liqihao.readbook.module.Home.ui.ActivityHome"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@color/homeBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_navbar_more"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:id="@+id/home_navView"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookCity"
            style="@style/homeNavText"
            android:id="@+id/home_bookCity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classification"
            style="@style/homeNavText"
            android:id="@+id/home_classification"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ranking"
            style="@style/homeNavText"
            android:id="@+id/home_rank"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/community"
            style="@style/homeNavText"
            android:id="@+id/community"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_navbar_search"
            android:layout_gravity="bottom"
            android:layout_marginStart="68dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/home_navSearch"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_frame">
    </FrameLayout>

</LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_user"
        android:layout_gravity="start"
        app:menu="@menu/navuser_body"
        app:headerLayout="@layout/navuser_head"
        android:clickable="true">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
