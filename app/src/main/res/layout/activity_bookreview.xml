<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/headbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:scaleType="fitXY"
            android:src="@mipmap/site"
            android:id="@+id/bookReview_bookImg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/bookReview_bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三体（全三册）"
                android:textColor="@color/classicBookName"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘慈欣"
                android:layout_marginTop="8dp"
                android:textColor="@color/classicText"
                android:textSize="12sp"
                android:id="@+id/bookReview_Author"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dasdasdasdas"
            android:layout_marginTop="18dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/bookReview_number"/>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/bookReview_Recycle">
        </com.jcodecraeer.xrecyclerview.XRecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无评论"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/bookReview_noComment"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/edtbackground"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/writeComment"
        android:layout_weight="1"
        android:id="@+id/bookReview_write"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bookdetail_red"
            android:text="@string/submit"
            android:textColor="@color/colorWhite"
            android:id="@+id/bookReview_submit"/>
    </LinearLayout>

</LinearLayout>